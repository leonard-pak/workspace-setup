#!/bin/sh

alias sudo="sudo "

alias v="vim"

alias ga='git add'
alias gc='git commit -m'
alias gs='git status -s'
alias gl='git log --pretty=format:"%C(yellow)%h %ad %C(red)| %C(white)%s%C(auto)%d %C(blue)[%an]" --graph --date=short'
alias gd='git diff'

alias ls="eza -l --no-user --no-filesize --no-permissions --no-time --icons=always"
alias ll="eza -l -a --icons=always"
alias lt="eza -T --icons=always"

alias cat="bat"
alias ccat="\cat"
